<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiRfidSample.MVVM.Views.ReadWriteAccess"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!--  Pages can be added as references or inline  -->
    <ContentPage.Content>
        <StackLayout Padding="0">
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">


                <Grid>


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="180" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="buttonReadWrite"
                        Grid.Column="0"
                        BackgroundColor="#785ADD"
                        BorderColor="LightGray"
                        BorderWidth="1"
                        Clicked="ButtonReadWrite"
                        ContentLayout="Top,25"
                        CornerRadius="1"
                        FontAttributes="Bold"
                        Text="Read/Write"
                        TextColor="White" />

                    <Button
                        x:Name="buttonLock"
                        Grid.Column="1"
                        BackgroundColor="#AC99EA"
                        BorderColor="LightGray"
                        BorderWidth="1"
                        Clicked="ButtonLock"
                        ContentLayout="Top,25"
                        CornerRadius="1"
                        FontAttributes="Bold"
                        Text="Lock"
                        TextColor="White" />
                </Grid>



            </StackLayout>
            <ScrollView
                x:Name="readWriteView"
               Padding="10,10,10,10"
                IsVisible="true">
                <StackLayout Padding="5" Orientation="Vertical">
                    <Entry
                        x:Name="tagPattern"
                        Placeholder="Tag Pattern"
                        Text="{Binding TagPattern, Mode=TwoWay}" />
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Label Text="Password" VerticalTextAlignment="Center" />
                        <Entry
                            x:Name="password"
                            HorizontalOptions="FillAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Password, Mode=TwoWay}" />
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="15">
                        <Label Text="Memory Bank" VerticalTextAlignment="Center" />
                        <Picker
                            x:Name="memorypicker"
                            HorizontalOptions="FillAndExpand"
                            SelectedItem="{Binding Memorybank, Mode=TwoWay}">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>EPC</x:String>
                                    <x:String>TID</x:String>
                                    <x:String>USER</x:String>
                                    <x:String>ACCESS PASSWORD</x:String>
                                    <x:String>KILL PASSWORD</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                            <Picker.SelectedIndex>0</Picker.SelectedIndex>
                        </Picker>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
                        <Label Text="Data" />
                        <Editor
                            x:Name="data"
                            AutoSize="TextChanges"
                            HorizontalOptions="FillAndExpand"
                            Text="{Binding AccessData, Mode=TwoWay}" />
                    </StackLayout>
                    <StackLayout
                        Padding="20"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal">
                        <Button
                            BackgroundColor="Blue"
                            BorderColor="LightGray"
                            BorderWidth="1"
                            Clicked="ReadOperation"
                            ContentLayout="Top,25"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            HorizontalOptions="FillAndExpand"
                            Text="Read"
                            TextColor="White" />
                        <Button
                            BackgroundColor="Blue"
                            BorderColor="LightGray"
                            BorderWidth="1"
                            Clicked="WriteOperation"
                            ContentLayout="Top,25"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            HorizontalOptions="FillAndExpand"
                            Text="Write"
                            TextColor="White" />


                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <StackLayout
                x:Name="lockView"
                Padding="10,10,10,10"
                IsVisible="false"
                Spacing="10">
                <Entry
                    x:Name="LockTagPattern"
                    Placeholder="Tag Pattern"
                    Text="{Binding TagPattern, Mode=TwoWay}" />
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Label Text="Password" VerticalTextAlignment="Center" />
                    <Entry
                        x:Name="LockPassword"
                        HorizontalOptions="FillAndExpand"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Password, Mode=TwoWay}" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Label Text="Memory Bank" VerticalTextAlignment="Center" />
                    <Picker
                        x:Name="memorylockpicker"
                        HorizontalOptions="FillAndExpand"
                        SelectedItem="{Binding Memorybank, Mode=TwoWay}">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>EPC</x:String>
                                <x:String>TID</x:String>
                                <x:String>USER</x:String>
                                <x:String>ACCESS PASSWORD</x:String>
                                <x:String>KILL PASSWORD</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                        <Picker.SelectedIndex>0</Picker.SelectedIndex>
                    </Picker>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Label Text="Lock Privilege" VerticalTextAlignment="Center" />
                    <Picker
                        x:Name="lockPrivilege"
                        HorizontalOptions="FillAndExpand"
                        SelectedItem="{Binding LockPrivilege, Mode=TwoWay}">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Read and Write</x:String>
                                <x:String>Permanent Lock</x:String>
                                <x:String>Permanent Unlock</x:String>
                                <x:String>Unlock</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                        <Picker.SelectedIndex>0</Picker.SelectedIndex>
                    </Picker>
                </StackLayout>
                <StackLayout
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal"
                    WidthRequest="150"
                    VerticalOptions="EndAndExpand">
                    <Button
                        BackgroundColor="Blue"
                        BorderColor="LightGray"
                        BorderWidth="1"
                        Clicked="LockOperation"
                        ContentLayout="Top,25"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="LOCK"
                        TextColor="White" />
                    
                </StackLayout>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>